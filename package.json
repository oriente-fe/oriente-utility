{
  "name": "oriente-utility",
  "version": "1.0.4",
  "main": "index.js",
  "repository": "git@github.com:oriente-fe/oriente-utility.git",
  "author": "Tony Pai <tony77794@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "NODE_ICU_DATA=node_modules/full-icu/ jest",
