  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@nuxtjs/eslint-config": "^2.0.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "cli-foreachfile": "^1.0.5",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "full-icu": "^1.3.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "rollup": "^1.27.14"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test && yarn lint --fix"
    }
  }
}
